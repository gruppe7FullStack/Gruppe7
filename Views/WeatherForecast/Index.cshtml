@model IEnumerable<Gruppe7.Models.WeatherForecast>

@{
    ViewData["Title"] = "Værmedling";
}

<h1>Værmelding</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Dato
            </th>
            <th>
                Temperatur
            </th>
            <th>
                Kommentar
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperature) C&deg;
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Oppdater</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Slett</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a class="btn btn-success" asp-action="Create">Opprett ny</a>
</p>