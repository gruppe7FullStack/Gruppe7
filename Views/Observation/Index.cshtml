@model IEnumerable<Gruppe7.Models.Observation>

@{
    ViewData["Title"] = "Observasjoner";
}

<head>
    <style>
        .table {
            margin-top: 20px;
            background-color: #f8f9fa;
        }

            .table th, .table td {
                vertical-align: middle;
            }

            .table thead th {
                border-bottom: 2px solid #dee2e6;
            }
    </style>
</head>

<h1>Observasjoner</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeOffset)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeResolution)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeSeriesId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeOffset)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeResolution)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeSeriesId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<hr />
<br />

<div class="container-md">
    <h2 class="mt-4 mb-3">Værmelding - Skoppum (Horten)</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Dato</th>
                <th scope="col">Temperatur</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("dd.MM.yyyy")</td>
                    <td>@item.Value C&deg;</td>
                </tr>
            }
        </tbody>
    </table>
    <p class="text-muted" style="font-style: italic;">
        NB: Temperatur målt kl. 00:00:00 gitt dagen
    </p>
</div>
